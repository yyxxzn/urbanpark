<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:translationX="21px"
    tools:context=".glogin.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="316dp"
        android:layout_height="146dp"
        android:translationY="-200px"
        card_view:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="190dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/loginText"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#21CB49"
            android:textSize="27sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="103dp"
            android:layout_height="57dp"
            android:translationX="300px"
            android:translationY="-100px"
            card_view:srcCompat="@drawable/googlebtn" />

    </LinearLayout>

</LinearLayout>

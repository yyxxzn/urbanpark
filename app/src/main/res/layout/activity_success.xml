<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/success_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".gpay.SuccessActivity">

    <LinearLayout
        android:id="@+id/btnLayoutVer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/success_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/check_circle"
            android:tint="#4CAF50" />

        <TextView
            android:id="@+id/payment_success_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/payment_success_description"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/btnLayoutHor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:gravity="center_horizontal|center|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gotoMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:backgroundTint="#4CAF50"
                android:text="Map"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/gotoSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1sp"
                android:layout_marginTop="5sp"
                android:backgroundTint="#4CAF50"
                android:text="Search"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/gotoBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1sp"
                android:layout_marginTop="5sp"
                android:backgroundTint="#4CAF50"
                android:text="Bookings"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>